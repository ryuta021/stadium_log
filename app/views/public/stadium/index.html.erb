      <ul class="collection with-header">
        <li class="collection-header"><h4>球場一覧</h4></li>
         <% @stadiums.each do |stadium|  %>
        <li class="collection-item"><%= link_to public_stadium_path(stadium.id) do %><%= stadium.name %><% end %></li>
