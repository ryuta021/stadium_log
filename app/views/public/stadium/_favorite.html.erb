<% if user_signed_in? %>
  <% if post.like_user(current_user.id) %>
    <%= button_to post_favorites_path(favorite, post_id: post.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= post.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to post_favorites_path(post), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= post.favorite_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag("icon_heart.svg") %>
    <span>
      <%= post.favorite_count %>
    </span>
<% end %>