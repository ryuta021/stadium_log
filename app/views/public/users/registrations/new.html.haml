.col-lg-12
  .text-center
    %h2 アカウントを作成
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-row
    .col-md-12.form-group
      .col-sm-3
      %label.col-sm-1{:for => "name"} 名前
      / <input class="col-sm-9 form-control" id="lastname_kana" />
      .col-sm-5
        = f.text_field :name, placeholder: "名前", class:"form-control"
  /
    <div class="form-group">
    <label>ユーザー画像</label>
  / </div><br>
  .form-row
    .col-md-12.form-group
      .col-sm-3
      %label.col-sm-1 好きなチーム
      .col-sm-5
        = f.collection_select :team_id, Team.all, :id, :team, include_blank: '選択して下さい',  class: "form-control"
        %br/


  .form-row
    .col-md-12.form-group
      .col-sm-3
      %label.col-sm-1 メールアドレス
      .col-sm-5
        = f.text_field :email, placeholder:"akiyama@gmail.com", class: "form-control"
  .form-row
    .col-md-12.form-group
      .col-sm-3
      %label.col-sm-1 パスワード
      .col-sm-5
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "パスワード", class:"form-control"
        %br/
  .form-row
    .col-md-12.form-group
      .col-sm-3
      %label.col-sm-1
        パスワード
        %br>/
        （確認用）
      .col-sm-5
        = f.password_field :password_confirmation, autocomplete: "パスワード確認用", class:"form-control"
  .form-row
    .col-md-12.form-group
      .col-xs-5
      .actions
        = f.submit "アカウントを作成" , class: "col-xs-2 btn btn-success"
= render "public/users/shared/links"
