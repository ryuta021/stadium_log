<div class="row">
  <div class="col s12">
    <div class="left-align">
        <h5> マイページ編集画面</h5>
        <%= form_for(@user, url: user_path(current_user.id)) do |f| %>
                <label> ユーザー名</label>
                <%= f.text_field :name, class: "form-control", autocomplete: 'off',placeholder: "入力してください" %>


                <label> 自己紹介文</label>
                <%= f.text_field :introduction, class: "form-control", autocomplete: 'off',placeholder: "入力してください" %>


              <label> 好きなチーム</label>
                <%= f.collection_select :team_id, Team.all, :id, :team, include_blank: '選択して下さい' %>



          <%= f.submit "ユーザー情報を編集する" , class: "btn btn-success col s5" %>
      <% end %>
    </div>
  </div>
</div>