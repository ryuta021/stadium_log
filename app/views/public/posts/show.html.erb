<div class="col-lg-5 col-lg-offset-3">
  <h1>ユーザーの投稿詳細</h1>


  <div class="form-group">
     <label>投稿画像</label><br>
     <%= attachment_image_tag @post, :posted_image, :fill, 250, 250, fallback: "no_image.png", size:'200x200' %>
  </div><br>

   <div class="form-group">
      <label>球場名</label><br>
      <%= @post.stadium.name %>
   </div><br>
   <div class="form-group">
      <label>ユーザー名</label><br>
  　　<%= link_to user_path(@post.id) do %><%= @post.user.name %><% end %>
  </div><br>
       <div class="form-group">
      <label>観戦日</label><br>
      <%= @post.watching_date.strftime("%Y年%m月%d日") %>
  </div><br>
 <div class="container-fluid bg-info">
      <label>投稿内容</label><br>
      <%= @post.post_content %>
  </div><br>
  <div class='form-group'>
                <label>アクセス採点</label>
                 <span class="blue-text text-darken-2"><%= @access %></span>
                <br>
                <div id='star-rate'></div>
                <label>グルメ採点</label>
                <span class="blue-text text-darken-2"><%= @gouremet %></span>
                <br>
                <div id='star2-rate'></div>
                <label>ムード採点</label>
                 <span class="blue-text text-darken-2"><%= @mood %></span>
                <br>
                <div id='star3-rate'></div>
                <label>キャパシティ採点</label>
                <span class="blue-text text-darken-2"><%=@capacity   %></span>
                <br>
                <div id='star4-rate'></div>
                <label>観光採点</label>
                 <span class="blue-text text-darken-2"><%= @gouremet %></span>
                <div id='star5-rate'></div>
            </div>
</div>
<%= link_to "edit", edit_post_path(@post.id) ,class: "btn btn-default col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
<%= link_to "削除",  post_path(@post.id), method: :delete ,class: "btn btn-primary col-lg-5" %>

          <!--アクセス星評価-->
          <script>
          $('#star-rate').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: '<%= @post.access_rate %>'
          });
          </script>
