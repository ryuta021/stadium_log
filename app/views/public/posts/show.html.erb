<main>
  <div class="row">
    <div class="col s3 ">
      <div class="card">
        <div class="card-content center-align">
          <h5><%= @post.watching_date.strftime("%Y年%m月%d日") %></h5>
          <h5><%= link_to  public_user_path(@post.id) do %><%= @post.user.name %><% end %></h5>
        </div>
      </div>
      <div class="card">
        <div class="card-content center-align">
          <p><%= @post.post_content %></p>
        </div>
      </div>

      <div class="card">
       <div class="card-content">
         <div class='form-group'>
          <h5><%= link_to  public_stadium_path(@post.id) do %><%= @post.stadium.name %><% end %></h5>
            <label>アクセス採点</label>
             <span class="blue-text text-darken-2"><%= @access %></span>
            <br>
            <div id='star-rate'></div>
            <label>グルメ採点</label>
            <span class="blue-text text-darken-2"><%= @gouremet %></span>
            <br>
            <div id='star2-rate'></div>
            <label>ムード採点</label>
             <span class="blue-text text-darken-2"><%= @mood %></span>
            <br>
            <div id='star3-rate'></div>
            <label>キャパシティ採点</label>
            <span class="blue-text text-darken-2"><%=@capacity   %></span>
            <br>
            <div id='star4-rate'></div>
            <label>観光採点</label>
             <span class="blue-text text-darken-2"><%= @gouremet %></span>
            <div id='star5-rate'></div>
         </div>
        </div>
       </div>
     </div>

    <div class="col s9 ">
      <h5 class="center-align">プラン名</h5>
      <div class="carousel carousel-slider center">
        <div class="carousel-fixed-item center">
          <a class="btn waves-effect white grey-text darken-text-2">button</a>
          </div>
            <%# @plan.each do |plan| %>
              <div class="carousel-item red white-text" href="#one!">
                <h2>プラン名</h2>
                <div class="form-group">
                <label class="control-label">スポットNo</label>
                <%#= spot_number %>
              </div>
              <div class="form-group">
                <label class="control-label">スポット金額</label>
                <%#= spot_place %>
              </div>
              <div class="form-group">
                <label class="control-label">スポット滞在時間</label>
                <%#= spot_time %>
              </div>
              <div class="form-group">
                <label class="control-label">スポット場所</label>
                <%#= address %>
              </div>
              <div class="form-group">
                <label class="control-label">投稿内容</label>
                <%#= spot_content %>
              </div>
            <%# end %>
        </div>
      </div>
    </div>


   <div class="row">
       <div class="col s12 ">
         <div class="col s2 "></div>
         <%= link_to "投稿を編集する", edit_public_post_path(@post.id) ,class:  "waves-effect waves-light btn-large col s3" %>
         <div class="col s1 "></div>
         <%= link_to "削除",  public_post_path(@post.id), method: :delete ,class:  "waves-effect waves-light btn-large col s3" %></p>
       </div>
      </div>
    </div>
</main>





