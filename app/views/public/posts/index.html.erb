<main>
<div class="row">
     <% @posts.each do |post| %>
    <div class="card">
      <span>投稿日<%= post.created_at.strftime("%m月%d日") %></span>&emsp;<span>観戦日<%= post.watching_date.strftime("%m月%d日") %></span>
      <div class="left-align">
         <%= link_to  public_post_path(post.id) do %><%= attachment_image_tag post, :posted_image, :fill, 250, 250, fallback: "no_image.png", size:'100x100' %><% end %>
          <span class="card-title"> <%= link_to  public_stadium_path(post.stadium.id) do %> <%= post.stadium.name %><% end %></span>
          <span><%= link_to  public_user_path(post.user.id) do %><%= post.user.name %><% end %></span>
      </div>
       <div class="card-content">
        <%= link_to  public_post_path(post.id) do %><%= post.post_content %><% end %>
       </div>

        <div class="card-action">
              <span><%= render 'public/favorites/favorite',post: post %></span>
              <span><%= render 'public/relationships/follow_button', user: post.user %></span>
        </div>     　
      </div>
    </div>
   <% end %>
    <%= paginate @posts  %>
    <%#= @posts.inspect  %>
  </div>
</main>


