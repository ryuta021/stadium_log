<div class="row">
  <div class="col s2"></div>
  <div class="col s4">
     <%= form_for(@post, url:  posts_path, method: :post) do |f| %>

    　 <div class="form-group col s12">
         <label>観戦した日にちを選択</label>
         <%= f.date_field :watching_date, class: 'form-control' %>
       </div>

       <div class="form-group col s12">
          <label>球場を選択してください</label>
          <%= f.collection_select :stadium_id, Stadium.all, :id, :name %>
       </div>

       <div class="form-group col s12">
  　　　   <label>投稿内容を入力してください</label>
          <%= f.text_field :post_content %>
       </div>

        <div class="form-group">
          <label>投稿画像</label>
          <%= f.attachment_field :posted_image %>
        </div>

       <div class="field">
          <%= f.label :行った飲食店や宿泊施設などのお店の名前または住所を入力してください %>
          <%= f.text_field :address %>
        </div>
  </div>




      <div class="col s4">

       <div class="collection">
         <%= f.label :アクセス ,class: "collection-item" %>
         <%= f.hidden_field :access_rate, id: :review_star  %>
         <div class="collection-item" id="star1"></div>

         <%= f.label :グルメ ,class: "collection-item"%>
         <%= f.hidden_field :gouremet_rate, id: :review_star %>
         <div class="collection-item" id="star2"></div>

         <%= f.label :ムード ,class: "collection-item"%>
         <%= f.hidden_field :mood_rate, id: :review_star %>
         <div class="collection-item" id="star3"></div>

         <%= f.label :キャパシティ ,class: "collection-item"%>
         <%= f.hidden_field :capacity_rate, id: :review_star %>
         <div class="collection-item" id="star4"></div>

      　　<%= f.label :観光　 ,class: "collection-item"%>
         <%= f.hidden_field :sightseeing_rate, id: :review_star %>
         <div class="collection-item" id="star5"></div>
       </div>
      </div>

　　　　　<div class="col s4"></div>
          <%= f.submit "投稿する" , class: "btn btn-success col s4" %>
        <div class="col s4"></div>
<% end %>

