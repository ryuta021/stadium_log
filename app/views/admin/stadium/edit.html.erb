<h1>球場編集画面</h1>


 <%= form_for(@stadium, url: admin_stadium_path) do |f| %>

        <div class="form-group">
            <label>球場名</label>
           <%= f.text_field :name, class: "form-control", autocomplete: 'off',placeholder: "入力してください" %>
        </div><br>

        <div class="form-group">
            <label>球場紹介文</label>
           <%= f.text_field :information, class: "form-control", autocomplete: 'off',placeholder: "入力してください" %>
        </div><br>

        <div class="form-group">
        	 <label>住所登録</label><br>
           <%= f.text_field :address, class: "form-control", autocomplete: 'off',placeholder: "入力してください" %>
        </div><br>

        <div class="form-group">
              <label>球場画像</label>
              <%= f.attachment_field :image %>
        </div><br>


    <%= f.submit "球場登録" , class: "btn btn-success col-lg-5" %>
<% end %>
<%= link_to "削除",  admin_stadium_path(@stadium.id), method: :delete ,class: "btn btn-primary col-lg-5" %>
