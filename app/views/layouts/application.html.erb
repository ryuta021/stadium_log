<!DOCTYPE html>
<html>
  <head>
    <title>Sutarog'</title>


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.10/font-awesome-animation.css" type="text/css" media="all" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.full.min.js" defer></script>
    <script src="https://js.pay.jp/" type="text/javascript"></script>

    <script src="//maps.google.com/maps/api/js?key=<%= ENV["GOOGLE_MAP_API_KEY"]%>"></script>
     <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->



    <script>
    $(document).ready(function(){
    $('select').formSelect();
    });
    </script>
     <style>
        header, main, footer {
          padding-left: 320px;
        }

        @media only screen and (max-width : 992px) {
          header, main, footer {
            padding-left: 0;
          }
        }

        /* 追加 */
        .sidenav .collapsible>.active .collapsible-header .chevron {
            transform: rotate(-90deg);
        }
      </style>






  <body>
    <header>
       <nav> 
         <div class="nav-wrapper light-blue darken-1">
            <%= link_to 'スタログ', root_path ,class: "brand-logo"  %><%#= image_tag 'logo.png'%><%# end %>
            <ul id="nav-mobile" class="right hide-on-med-and-down ">




              <% if user_signed_in? %>

                  <li><%= link_to "投稿一覧", public_posts_path %></li>

                  <li><%= link_to "マイページ", public_user_path(current_user.id) %></li>

                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>

                  <% elsif admin_user_signed_in? %>

                  <li><%= link_to "球場登録 一覧",admin_stadium_index_path %></li>

                  <li><%= link_to "チーム登録 一覧",admin_team_index_path %></li>

                  <li><%= link_to "ユーザー一覧",admin_users_path %></li>

                  <li><%= link_to "投稿一覧",admin_posts_path %></li>

                  <li><%= link_to "管理者ログアウト",  destroy_user_session_path, method: :delete %></li>

                  <% else %>

                   <li><%= link_to "ログイン",new_user_session_path %></li>

                  <li><%= link_to "新規登録" ,  new_user_registration_path %></li>

                  <li><%= link_to "管理者新規登録" ,  new_admin_user_registration_path %></li>

                  <li><%= link_to "管理者ログイン", new_admin_user_session_path %></li>

               <% end %>
             </ul>
           </div>

       </nav>

<ul id="slide-out" class="sidenav sidenav-fixed">
  　　<li><a class="waves-effect waves-light btn modal-trigger" href="#modal1">検索する</a></li>
      <li>
        <div class="user-view center-align">
            <%= attachment_image_tag current_user, :image, :fill, 250, 250, fallback: "no_image.png", size:'150x150'  %>
        </div>
      </li>
      <% if user_signed_in? %>
      <li class="black-text email center-align" ><a><%= current_user.name %><i class="material-icons left">person</i></a></li>
      <li class="black-text email center-align" ><a><%= current_user.email %><i class="material-icons left">local_post_office</i></a></li>
      <li class="black-text email center-align" ><a><%= current_user.team.team %><i class="material-icons left">favorite</i></a></h6></li>
      <li>
        <% end %>
        <ul class="collapsible">
          <li>
            <a class="collapsible-header">ユーザー情報<i class="material-icons chevron right">chevron_left</i></a>
            <div class="collapsible-body">
               <% if user_signed_in? %>
              <ul>
                <li><%= link_to "マイページ", public_user_path(current_user.id) %></li>
                <li><%= link_to "いいね投稿一覧",  public_post_favorite_post_path(current_user.id) %></li>
                <li><%= link_to "フォロー一覧", public_user_path(current_user.id) %></li>
                <li><i class="material-icons">chat</i></a></li>
              </ul>
              <% end %>
            </div>
          </li>
        </ul>
      </li>

      <ul class="collapsible">
        <li>
          <a class="collapsible-header">球場情報<i class="material-icons chevron right">chevron_left</i></a>
           <div class="collapsible-body">
             <% if user_signed_in? %>
             <ul>
                <% @stadiums.each do |stadium|  %>
                    <li class="collection-item"><%= link_to public_stadium_path(stadium.id) do %><%=stadium.name %><% end %></li>
                <% end %>
              </ul>
              <% end %>
           </div>
        </li>
      </ul>
  </ul>





  </header><!-- /header -->
<%= yield %>

 <% if user_signed_in? %>
           <div class="fixed-action-btn">
            <%= link_to "投稿", new_public_post_path ,class: "btn-floating btn-large red" %>
              <ul>
                <li><a class="btn-floating btn-large red"><i class="material-icons">insert_chart</i></a></li>
                <li><a class="btn-floating  btn-large yellow darken-1"><i class="material-icons">format_quote</i></a></li>
                <li><a class="btn-floating  btn-large green"><i class="material-icons">publish</i></a></li>
                <li><a class="btn-floating  btn-large blue"><i class="material-icons">attach_file</i></a></li>
              </ul>
            </div>



  <div id="modal1" class="modal">
    <% if user_signed_in? %>
      <div class="modal-content">
        <h6>投稿内容から検索</h4>
    　　 <%= search_form_for(@q, url: public_post_detail_search_path(current_user) ) do |f| %>
          <%= f.label :post_content, "投稿内容を検索する　調べたいキーワードを入力してください"  %>
           <ul class="collection">
             <li class="collection-item">
                <%= f.search_field :post_content_cont ,class: "input-field" %>
             </li>
           </ul>
           <%= f.submit "検索" ,class: "waves-effect waves-light btn-small" %>
        <% end %>
      </div>
      <div class="modal-content">
      <h6>プラン名から検索</h6>
    　　 <%= search_form_for(@p, url: public_post_detail_search_path(current_user) ) do |f| %>
          <%#= f.label :title, "プランを検索する　調べたいキーワードを入力してください"  %>
           <ul class="collection">
             <li class="collection-item">
                <%= f.search_field :title ,class: "input-field" %>
             </li>
           </ul>
           <%= f.submit "検索" ,class: "waves-effect waves-light btn-small" %>
        <% end %>
      </div>



    <% end %>
  </div>

<% end %>

<footer class="page-footer light-blue darken-1">
    </div>
    <div class="footer-copyright">
      <div class="container">
        © 2019 Copyright ryuta sasaki(@yusukeito58)
      </div>
    </div>
  </footer>
</body>

</html>